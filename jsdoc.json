{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "readme": "./DOCS_README.md",
    "template": "node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "default_theme": "dark",
      "search": true,
      "title": "Olympe Client API",
      "footer": "Olympe Client API Documentation",
      "meta": [
        {
          "name": "description",
          "content": "Documentation for the Olympe Client API"
        }
      ],
      "add_style_path": [
        {
          "href": "custom-layout.css",
          "rel": "stylesheet",
          "media": "all"
        }
      ],
      "add_script_path": [
        {
          "src": "custom-layout.js"
        }
      ]
    }
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "default": {
      "outputSourceFiles": false,
      "staticFiles": {
        "include": ["docs-assets"]
      }
    }
  }
}
